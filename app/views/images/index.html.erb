<h1>Listing images</h1>

<table>
  <tr>
    <th>Image file name</th>
    <th>Product</th>
    <th>Image content type</th>
    <th>Image file size</th>
    <th>Image updated at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @images.each do |image| %>
  <tr>
    <td><%= image.image_file_name %></td>
    <td><%= image.product_id %></td>
    <td><%= image.image_content_type %></td>
    <td><%= image.image_file_size %></td>
    <td><%= image.image_updated_at %></td>
    <td><%= link_to 'Show', image %></td>
    <td><%= link_to 'Edit', edit_image_path(image) %></td>
    <td><%= link_to 'Destroy', image, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

